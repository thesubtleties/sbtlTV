{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-utils/schema.json",
  "productName": "sbtlTV",
  "version": "0.1.0",
  "identifier": "com.sbtltv.app",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm --filter @sbtltv/ui dev",
    "beforeBuildCommand": "pnpm --filter @sbtltv/ui build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "sbtlTV",
        "width": 1280,
        "height": 720,
        "minWidth": 640,
        "minHeight": 620,
        "decorations": false,
        "transparent": true,
        "backgroundColor": "#00000000",
        "resizable": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' https: http: data:; media-src 'self' https: http: blob:; connect-src 'self' https: http: ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "mpv-bundle/*": "mpv/"
    },
    "macOS": {
      "infoPlist": "Info.plist"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  },
  "plugins": {}

}
